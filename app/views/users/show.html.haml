= render "shared/header"

.mypage
  .mypage__content
    .mypage__content__icon
      - if @user.image.nil?
        = image_tag("default_icon.jpg", class: "user-image")
      - else
        = attachment_image_tag @user, :image, class: "user-image"
    
    .mypage__content__name
      = @user.name
    .mypage__content__work
      = @user.category.name
      
    .mypage__content__follow
      = render partial: "relationships/follow_button", user: @user
      
    .mypage__content__dm
      %button
      - if @user.id == current_user.id
      - else
        - if @isRoom == true
          = link_to "DM", rooms_path(@roomId), class: "dm-btn"
        - else
          = form_for @room do |f|
            = fields_for @entry do |e|
              = e.hidden_field :user_id, value: @user.id
            = f.submit "DM"
    
    .mypage__content__tab2
      %p フォロー
      .mypage__content__tab2__count
        = @user.followings.count
      .mypage__content__tab2__name
        - @user.followings.each do |user|
          - if user.image.nil?
            = image_tag("default_icon.jpg", class: "follow-image")
          - else
            = attachment_image_tag user, :image, class: "follow-image"
    
    .mypage__content__tab3
      %p フォロワー
      .mypage__content__tab3__count
        = current_user.followers.count
      .mypage__content__tab3__name
        - current_user.followers.each do |user|
          - if user.image.nil?
            = image_tag("default_icon.jpg", class: "follow-image")
          - else
            = attachment_image_tag user, :image, class: "follow-image"

    %table{border: "1"}
      %thead
        %tr
          %th 性別
      %tbody
        %tr
          %td
            = @user.sex
      %thead
        %tr
          %th 年齢
      %tbody
        %tr
          %td
            = @user.age
      %thead
        %tr
          %th 地域
      %tbody
        %tr
          %td
            = @user.area
      %thead
        %tr
          %th 自己紹介
      %tbody
        %tr
          %td
            .introduce-tab
              = @user.introduce
      %thead
        %tr
          %th スキル
      %tbody
        %tr
          %td
            .skill
              .skill-tab
                .skill-tab__name
                  = @user.skill1.name
                .skill-tab__period
                  = @user.skill1_period
              .skill-tab
                .skill-tab__name
                  = @user.skill2.name
                .skill-tab__period
                  = @user.skill2_period
              .skill-tab
                .skill-tab__name
                  = @user.skill3.name
                .skill-tab__period
                  = @user.skill3_period
              .skill-tab
                .skill-tab__name
                  = current_user.skill4.name
                .skill-tab__period
                  = @user.skill4_period
              .skill-tab
                .skill-tab__name
                  = @user.skill5.name
                .skill-tab__period
                  = @user.skill5_period
      %thead
        %tr
          %th 実績
      %tbody
        %tr
          %td
            = @user.performance1
      %thead
        %tr
          %th やりたいこと
      %tbody
        %tr
          %td
            = @wanttodos
      %thead
        %tr
          %th 繋がりたい人
      %tbody
        %tr
          %td
            .skill-tab__name
              = @wanttomeets
      %thead
        %tr
          %th 参画携帯
      %tbody
        %tr
          %td
            = @jointypes

= render "shared/footer"