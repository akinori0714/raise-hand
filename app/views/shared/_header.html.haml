      - if user_signed_in?
        = link_to "マイページ", mypages_path(@user), class: "header-tab"
      - else
        = link_to "マイページ", new_user_registration_path, class: "header-tab"
    .header__down__tab
      = link_to "コミュニティ", communities_path , class: "header-tab"
    .header__down__tab
      = link_to "スカウト", users_path, class: "header-tab"
    .header__down__tab
      = link_to "ジョイン", projects_path, class: "header-tab"
    .header__down__tab
