.header
  .header__up
    .header__up__logo
      = link_to "Shake × Hands", root_path, class: "header-logo-btn"
    .header__up__logo
      %p 起業家同士が気軽に繋がるためのマッチングプラットフォーム
    .header__up__icon
      %ul.menu
        %li 
        - if user_signed_in? 
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'account-new-btn'
        - else
          = link_to "新規会員登録(無料)", new_user_registration_path, class: "account-new-btn"
          = link_to "ログイン", new_user_session_path, class: "account-new-btn"
  .header__down
