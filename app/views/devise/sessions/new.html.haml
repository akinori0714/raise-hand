= render "shared/header"

#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h5 ログイン
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .login
          .login-label
            = f.label :メールアドレス
          .login-input
            = f.email_field :email, autofocus: true, class:"login-input"
          .login
            .login-label
              = f.label :パスワード
              %i (英数字8文字以上)
            .login-input
              = f.password_field :password, autocomplete: "off", class:"login-input"
          .actions
            = f.submit "ログイン", class: 'btn'

= render "shared/footer"
