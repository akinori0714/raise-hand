
= link_to(user_path(chat.user.id)) do
  .chat{"data-chat_id": chat.id}
    .chat__upper
      .chat__upper__user-icon
        - if chat.user.image.nil?
          = image_tag("default_icon.jpg", class: "user-image")
        - else
          = attachment_image_tag chat.user, :image, class: "user-image"
      .chat__upper__user-name
        = chat.user.name
      .chat__upper__date
        = chat.created_at.strftime("%Y年%m月%d日 %H時%M分")
        
    .chat__lower
      - if chat.content.present?
        %p.chat__lower__content
          = chat.content
      = image_tag chat.image.url, class: 'lower-chat__image' if chat.image.present?